@model CourseFormModel

@{
    ViewBag.Title = "Add new course";
}

<div class="container">
    <div class="row">
        <div class=" col-md-6 col-sm-12 offset-md-2">
            <form method="post">
                <h2 class="text-center p-3">Add new course</h2>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <ul>
                        <li>
                            Active courses
                            <ul>
                                @foreach (var course in Model.Courses)
                                {
                                    <li>@course</li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="form-group">
                    <label asp-for="Credit"></label>
                    <input asp-for="Credit" class="form-control">
                    <span asp-validation-for="Credit" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TeacherId">Choose teachers:</label>
                    <select asp-for="TeacherId" class="form-control" multiple>
                        @foreach (var teacher in Model.Teachers)
                        {
                            <option value="@teacher.Id">@(teacher.FirstName + " " + teacher.LastName)</option>
                        }
                    </select>
                    <span asp-validation-for="TeacherId" class="small text-danger mt-2"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>