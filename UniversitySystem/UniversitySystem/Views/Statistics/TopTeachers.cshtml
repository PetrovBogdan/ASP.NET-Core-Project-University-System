@model List<TeacherServiceModel>

@{
    ViewBag.Title = "Top three teachers";
}

<h4 class="text-center font-italic mt-5 mb-4">Top three teachers</h4>

<div class="container">
    <div class="row text-center">
        <table class=" table table-bordered">
            <thead>
                <tr>
                    <th width=500px scope="col">Name</th>
                    <th width=500px scope="col">Total students</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in Model)
                {
                    <tr>
                        <td>@teacher.FullName</td>
                        <td>@teacher.TotalStudents</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>